@model ArtStore.Models.Product

<div class="container">
    <h1>Preview Your Order</h1>
    <img src="@Model.ImagePath" class="img-fluid" alt="@Model.Name" />
    <p><strong>Product:</strong> @Model.Name</p>
    <p><strong>Frame Style:</strong> @ViewData["FrameStyle"]</p>
    <p><strong>Frame Width:</strong> @ViewData["FrameWidth"] inch</p>
    <p><strong>Price:</strong> $@Model.Price</p>

    <form method="post" action="/Checkout/Confirm">
        <input type="hidden" name="productId" value="@Model.Id" />
        <input type="hidden" name="frameStyle" value="@ViewData["FrameStyle"]" />
        <input type="hidden" name="frameWidth" value="@ViewData["FrameWidth"]" />
        <button type="submit" class="btn btn-success">Confirm and Checkout</button>
    </form>
</div>
