@model IEnumerable<ArtStore.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Product List</h1>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>
